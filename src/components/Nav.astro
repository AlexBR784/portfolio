<nav id="navbar" class="top-3 left-2 fixed z-10 flex items-center rounded-full px-3 py-1 transition-all duration-300">
  <img src="/portfolio/Logo Sin Fondo.png" alt="Logo" class="w-12 rounded hover:animate-spin hover:cursor-grab focus:cursor-grabbing" />
  <p id="nav-text" class="font-bold text-xs ml-1 opacity-0 max-w-0 overflow-hidden transition-all duration-500">{'/Alex/'}</p>
</nav>

<script>
  
  function handleScroll() {
    const navText = document.getElementById('nav-text');
    if (window.scrollY > 50) {
      navText.classList.remove('opacity-100', 'max-w-[100px]', 'ml-2');
      navText.classList.add('opacity-0', 'max-w-0', 'ml-0');
    } else {
      navText.classList.remove('opacity-0', 'max-w-0', 'ml-0');
      navText.classList.add('opacity-100', 'max-w-[100px]', 'ml-2');
    }
  }

  document.addEventListener('DOMContentLoaded', () => {
    window.addEventListener('scroll', handleScroll);
    handleScroll();
  });
</script>
